{
  "rules": {
    "body-leading-blank": [2, "always"],
    "scope-empty": [2, "never"],
    "subject-max-length": [2, "always", 72],
    "type-empty": [2, "never"],
    "type-enum": [2, "always", [
      "chore",
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "test",
      "revert"
      ]
    ]
  }
}
